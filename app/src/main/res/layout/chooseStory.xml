<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"

    tools:context="com.example.menno_000.mennolont_pset2.ChooseStoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="Choose your story!"
        android:textSize="30sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/x1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Simple story"
                android:onClick="inputStory" />

            <Button
                android:id="@+id/x2"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Tarzan story"
                android:onClick="inputStory" />

            <Button
                android:id="@+id/x3"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="University story"
                android:onClick="inputStory" />

            <Button
                android:id="@+id/x4"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Clothes story"
                android:onClick="inputStory" />

            <Button
                android:id="@+id/x5"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Dance story"
                android:onClick="inputStory" />

            <Button
                android:id="@+id/x6"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Random story"
                android:onClick="inputStory" />

        </GridLayout>

</LinearLayout>
