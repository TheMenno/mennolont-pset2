<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"

    tools:context="com.example.menno_000.mennolont_pset2.ChooseStoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="Choose your story!"
        android:textSize="30sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/simple"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Simple story" />

            <Button
                android:id="@+id/tarzan"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Tarzan story" />

            <Button
                android:id="@+id/uni"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="University story" />

            <Button
                android:id="@+id/clothes"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Clothes story" />

            <Button
                android:id="@+id/dance"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Dance story" />

            <Button
                android:id="@+id/random"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Random story" />

        </GridLayout>

</LinearLayout>
